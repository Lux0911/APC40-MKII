{
  "name": "Akai APC40 Mk2",
  "type": "MIDI",
  "path": "Hardware/Controllers",
  "version": "1.0.0",
  "description": "APC40 Mk2 module: full button/grid, faders, knobs, LED & LED-ring support using the official APC40 Mk2 protocol.",
  "url": "",
  "downloadURL": "",
  "hasInput": true,
  "hasOutput": true,
  "icon": "icon.png",
  "parameters": [
    {
      "name": "Mode",
      "shortName": "mode",
      "type": "list",
      "default": "Ableton Live",
      "items": ["Generic", "Ableton Live", "Alternate Ableton Live"],
      "description": "APC40 Mk2 mode sent in SysEx introduction. Generic=0x40, Ableton Live=0x41, Alternate=0x42"
    },
    {
      "name": "Application Version High",
      "shortName": "appVersionHigh",
      "type": "int",
      "min": 0,
      "max": 127,
      "default": 0,
      "description": "Major version byte sent in APC40 intro SysEx"
    },
    {
      "name": "Application Version Low",
      "shortName": "appVersionLow",
      "type": "int",
      "min": 0,
      "max": 127,
      "default": 1,
      "description": "Minor version byte sent in APC40 intro SysEx"
    },
    {
      "name": "Bugfix level",
      "shortName": "bugfix",
      "type": "int",
      "min": 0,
      "max": 127,
      "default": 0,
      "description": "Bugfix byte sent in APC40 intro SysEx"
    },
    {
      "name": "Send Introduction on Connect",
      "shortName": "sendIntroOnConnect",
      "type": "bool",
      "default": true,
      "description": "If true, module sends the APC40 Mk2 SysEx introduction when opened"
    }
  ],
  "values": [
    { "name": "Grid / Clip Launch (0..39)", "shortName": "clip", "type": "button-grid", "count": 40, "description": "Clip Launch buttons 1..40 (note numbers 0x00..0x27)" },

    { "name": "Track Record Arm (1..8)", "shortName": "recarm", "type": "button", "count": 8, "description": "Note numbers 0x30 (chan=0..7 for tracks 1..8)" },
    { "name": "Track Solo (1..8)", "shortName": "solo", "type": "button", "count": 8, "description": "Note numbers 0x31 (chan=0..7)" },
    { "name": "Activator (1..8)", "shortName": "activator", "type": "button", "count": 8, "description": "Note numbers 0x32 (chan=0..7)" },
    { "name": "Track Select (1..8 + master)", "shortName": "trackSelect", "type": "button", "count": 9, "description": "Note 0x33 (chan=0..7) + master" },
    { "name": "Track Stop (1..8)", "shortName": "trackStop", "type": "button", "count": 8, "description": "Note 0x34 (chan=0..7)" },

    { "name": "Device left/right / bank left/right / device on/off / lock / views", "shortName": "deviceNav", "type": "button", "count": 8, "description": "0x3A..0x41 mapping" },

    { "name": "Crossfader A/B (1..8)", "shortName": "crossfaderAB", "type": "button", "count": 8, "description": "Note 0x42 uses channel 0..7 to specify track for crossfader A/B" },

    { "name": "Master", "shortName": "master", "type": "button", "count": 1, "description": "Master button 0x50" },
    { "name": "Stop All Clips", "shortName": "stopAll", "type": "button", "count": 1, "description": "0x51" },

    { "name": "Scene Launch (1..5)", "shortName": "sceneLaunch", "type": "button", "count": 5, "description": "0x52..0x56 (RGB types)" },

    { "name": "Transport Play", "shortName": "play", "type": "button", "count": 1 },
    { "name": "Transport Stop", "shortName": "stop", "type": "button", "count": 1 },
    { "name": "Transport Record", "shortName": "record", "type": "button", "count": 1 },
    { "name": "Session Record", "shortName": "sessionRecord", "type": "button", "count": 1 },

    { "name": "Cue Level", "shortName": "cue", "type": "knob", "count": 1, "description": "Controller 0x2F" },

    { "name": "Track Faders (1..8)", "shortName": "trackFader", "type": "fader", "count": 8, "description": "Controller 0x07 on channels 0..7" },
    { "name": "Master Fader", "shortName": "masterFader", "type": "fader", "count": 1, "description": "Controller 0x0E" },

    { "name": "Device Knobs (1..8)", "shortName": "deviceKnob", "type": "encoder", "count": 8, "description": "Controller 0x10..0x17 - LED ring controllers 0x18..0x1F" },
    { "name": "Track Knobs (1..8)", "shortName": "trackKnob", "type": "encoder", "count": 8, "description": "Controller 0x30..0x37 - LED ring controllers 0x38..0x3F" },

    { "name": "Tempo (relative)", "shortName": "tempo", "type": "relative", "count": 1, "description": "Relative controller 0x0D" },

    { "name": "Footswitch", "shortName": "footswitch", "type": "button", "count": 1, "description": "Controller 0x40" }
  ],
  "commands": [
    {
      "name": "Send introduction (sysEx)",
      "shortName": "sendIntro",
      "description": "Forces sending the APC40 Mk2 initialization SysEx message"
    },
    {
      "name": "All LEDs off",
      "shortName": "ledsOff",
      "description": "Turns off many of the common LEDs by sending appropriate Note-Off/Note-On with 0 velocity"
    }
  ]
}
